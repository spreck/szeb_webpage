# Application Configuration Example
# Copy this file to .env and fill in your actual values

# Domain Configuration
DOMAIN_NAME=conescout.duckdns.org

# Flask Application Settings
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=replace_with_a_strong_random_key
SECURITY_PASSWORD_SALT=replace_with_a_strong_random_salt
WTF_CSRF_SECRET_KEY=replace_with_a_strong_random_key

# Database Settings
POSTGRES_DB=geoserver_db
POSTGRES_USER=geoserver
POSTGRES_PASSWORD=your_secure_postgres_password

# Authentication Settings
ADMIN_EMAIL=your_admin_email@example.com
ADMIN_PASSWORD=your_secure_admin_password
ADMIN_EMAILS=admin1@example.com,admin2@example.com

# GeoServer Settings
GEOSERVER_URL=https://conescout.duckdns.org/geoserver
GEOSERVER_WORKSPACE=SZEB_sample
GEOSERVER_USER=admin
GEOSERVER_PASS=your_geoserver_password

# Let's Encrypt / Certbot
CERTBOT_EMAIL=conescout.alerts@gmail.com

# OAuth Settings
# Note: Do not store client_secret file in the repository
# Download from Google Developer Console and place in the project root
# GOOGLE_OAUTH_CLIENT_ID=your_client_id 
# GOOGLE_OAUTH_CLIENT_SECRET=your_client_secret
